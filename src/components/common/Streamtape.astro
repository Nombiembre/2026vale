---
// Streamtape.astro (Google Drive - ultra simple)
// Props:
// - src: string (URL de Google Drive en formato /preview)

interface Props {
  src: string;
}

const { src } = Astro.props as Props;
---

<div class="video-wrapper">
  <iframe
    src={src}
    allow="autoplay; fullscreen"
    frameborder="0"
  ></iframe>
</div>

<style>
  .video-wrapper {
    width: 100%;
    aspect-ratio: 16 / 9;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .video-wrapper iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>